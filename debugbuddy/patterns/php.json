{
  "language": "php",
  "version": "2.0",
  "errors": [
    {
      "type": "Parse Error (E_PARSE)",
      "keywords": ["parse error", "syntax error"],
      "simple": "Syntax error preventing parsing.",
      "fix": "Check missing ;, ), }, or quotes.",
      "example": "<?php /* ❌ Wrong */\necho 'hello';\n\n/* ✅ Correct */\necho 'hello'; ?>",
      "did_you_mean": ["Add ;"]
    },
    {
      "type": "Fatal Error (E_ERROR)",
      "keywords": ["fatal error", "call to undefined function"],
      "simple": "Critical error halting execution.",
      "fix": "Define missing functions or classes.",
      "example": "<?php /* ❌ Wrong */\nundefined_func();\n\n/* ✅ Correct */\nfunction my_func() {}\nmy_func(); ?>",
      "did_you_mean": ["Define function"]
    },
    {
      "type": "Warning (E_WARNING)",
      "keywords": ["warning", "undefined variable"],
      "simple": "Non-critical issue.",
      "fix": "Declare variables; use isset().",
      "example": "<?php /* ❌ Wrong */\necho $var;\n\n/* ✅ Correct */\n$var = 'hello';\necho $var; ?>",
      "did_you_mean": ["$var = ''"]
    },
    {
      "type": "Notice (E_NOTICE)",
      "keywords": ["notice", "undefined index"],
      "simple": "Minor issue like undefined array key.",
      "fix": "Use isset() or array_key_exists().",
      "example": "<?php /* ❌ Wrong */\necho $_GET['key'];\n\n/* ✅ Correct */\necho isset($_GET['key']) ? $_GET['key'] : ''; ?>",
      "did_you_mean": ["Use ?? operator"]
    },
    {
      "type": "Deprecated Error (E_DEPRECATED)",
      "keywords": ["deprecated", "deprecated function"],
      "simple": "Using deprecated feature.",
      "fix": "Update to current syntax.",
      "example": "<?php /* ❌ Wrong */\nmysql_connect();\n\n/* ✅ Correct */\n$pdo = new PDO($dsn, $user, $pass); ?>",
      "did_you_mean": ["Use PDO"]
    },
    {
      "type": "Type Error (E_RECOVERABLE_ERROR)",
      "keywords": ["type error", "argument type"],
      "simple": "Wrong argument type passed.",
      "fix": "Cast or validate types.",
      "example": "<?php /* ❌ Wrong */\nfunction add(int $a, int $b) { return $a + $b; }\nadd('1', 2);\n\n/* ✅ Correct */\nadd((int)'1', 2); ?>",
      "did_you_mean": ["Type cast"]
    },
    {
      "type": "Division by Zero",
